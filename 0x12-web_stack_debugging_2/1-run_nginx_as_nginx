#!/usr/bin/env bash
# Modify the Nginx configuration file to run as the nginx user
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Modify the default Nginx site configuration to listen on all active IPs on port 8080
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default

# Reload Nginx to apply the changes
service nginx reload

# Check if Nginx is running as the nginx user
if ps aux | grep -q 'nginx: master process'; then
    echo "Nginx is running as the nginx user."
else
    echo "Failed to configure Nginx to run as the nginx user."
fi
